#include <iostream>
using namespace std;

class sortDataClass {

private:

    int* data;
    int DS, MN;

public:
    void randomize() {
        for (int i = 0; i < DS; i++)
            data[i] = rand() % MN;
    }

    sortDataClass(int s, string set, int o) {
        DS = s;
        MN = o;

        data = new int[DS];
        if (set == "inorder")
            for (int i = 0; i < DS; i++) data[i] = i;
        else if (set == "reverseorder")
            for (int i = 0; i < DS; i++) data[i] = MN - i - 1;
        else if (set == "random")
            randomize();
        else
            cout << "Error";
    }

    void printData() {
        for (int i = 0; i < DS; i++)
            cout << data[i] << endl;
    }
};

int main() {
    int DS = 10;
    int MN = 30;

    cout << "In-order data set." << endl;
    sortDataClass inorder(DS, "inorder", MN);
    inorder.printData();
    cout << endl << endl << endl << endl;

    cout << "Reverse-order data set." << endl;
    sortDataClass reverse(DS, "reverseorder", MN);
    reverse.printData();
    cout << endl << endl << endl << endl;

    cout << "Random order data set." << endl;
    sortDataClass random(DS, "random", MN);
    random.printData();
    return 0;
}